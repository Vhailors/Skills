{
  "mcpServers": {
    "sentry-spotlight": {
      "command": "npx",
      "args": [
        "-y",
        "--",
        "@spotlightjs/spotlight@latest",
        "--stdio-mcp"
      ],
      "env": {
        "SPOTLIGHT_PORT": "8969",
        "NODE_ENV": "development",
        "MCP_TIMEOUT": "15000",
        "NODE_OPTIONS": "--max-old-space-size=512"
      }
    },
    "chrome-devtools": {
      "command": "npx",
      "args": [
        "-y",
        "--",
        "chrome-devtools-mcp"
      ],
      "env": {
        "MCP_TIMEOUT": "15000",
        "NODE_OPTIONS": "--max-old-space-size=512"
      }
    }
  }
}
