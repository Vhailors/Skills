{
  "$schema": "https://anthropic.com/claude-code/hooks.schema.json",
  "description": "Intelligent superflow system using context injection to preserve sophisticated workflow automation",
  "hooks": {
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "bash ${CLAUDE_PLUGIN_ROOT}/hooks/scripts/session-start.sh",
            "timeout": 5
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "bash ${CLAUDE_PLUGIN_ROOT}/hooks/scripts/analyze-prompt.sh",
            "timeout": 3
          },
          {
            "type": "command",
            "command": "bash ${CLAUDE_PLUGIN_ROOT}/hooks/scripts/detect-skill-gaps.sh",
            "timeout": 2
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "bash ${CLAUDE_PLUGIN_ROOT}/hooks/scripts/check-logging.sh",
            "timeout": 2
          }
        ]
      },
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "bash ${CLAUDE_PLUGIN_ROOT}/hooks/scripts/detect-git-operations.sh",
            "timeout": 3
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "bash ${CLAUDE_PLUGIN_ROOT}/hooks/scripts/verify-tests.sh",
            "timeout": 2
          },
          {
            "type": "command",
            "command": "bash ${CLAUDE_PLUGIN_ROOT}/hooks/scripts/check-spotlight-errors.sh",
            "timeout": 2
          }
        ]
      },
      {
        "matcher": "Read|Write|Edit|Glob|Grep",
        "hooks": [
          {
            "type": "command",
            "command": "bash ${CLAUDE_PLUGIN_ROOT}/hooks/scripts/noop-hook.sh",
            "timeout": 1
          }
        ]
      }
    ],
    "SessionEnd": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "bash ${CLAUDE_PLUGIN_ROOT}/hooks/scripts/session-summary-generator.sh",
            "timeout": 10,
            "description": "Auto-generate session summary when Claude Code stops"
          }
        ]
      }
    ]
  },
  "metadata": {
    "superflows": 14,
    "active_hooks": 9,
    "enforcement_hooks": ["logging-schema", "refactoring-safety", "pre-commit-validation", "test-verification", "session-summary"],
    "suggestion_hooks": ["quick-fix", "ui-library", "integration-check", "code-explanation", "spotlight-error-check", "skill-gap-detection", "pixel-perfect-site-copy", "security-scan", "perf-check", "dependency-check", "pattern-recall", "superflow-summary-capture"],
    "supporting_skills": ["mock-data-removal", "full-stack-integration-checker", "error-handling-patterns", "session-summary"],
    "superflow_list": [
      "pixel-perfect-site-copy",
      "refactoring-safety-protocol",
      "debugging-memory-assisted",
      "feature-development-speckit",
      "ui-development-shadcn",
      "api-contract-design",
      "verification-before-completion",
      "rapid-prototyping-mvp",
      "security-patterns",
      "performance-optimization",
      "dependency-management",
      "learning-onboarding",
      "code-explanation",
      "pattern-recall"
    ],
    "documentation": "../SUPERFLOWS.md",
    "integrations": ["spotlight-mcp", "skill-seekers", "chrome-devtools-mcp"],
    "note": "All 14 superflows integrated into analyze-prompt.sh for centralized pattern detection. Session-summary skill auto-triggers on SessionEnd and SuperflowComplete for post-session documentation. Manual /session-summary command available for checkpoints.",
    "session_summary_integration": {
      "auto_triggers": ["SessionEnd", "SuperflowComplete"],
      "manual_trigger": "/session-summary",
      "output_location": "PROJECT_ROOT/SESSION-SUMMARY-{timestamp}.md",
      "capture_points": ["git-changes", "completed-todos", "pending-items", "known-issues"]
    }
  }
}
